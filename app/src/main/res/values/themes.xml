<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TabletkaApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="text_color"      >#000000</item>
        <item name="button_color"    >#5261ff</item>
        <item name="border_color"    >#000000</item>
        <item name="note_color"      >#FFFFFF</item>
        <item name="background_color">#FFFFFF</item>
        <item name="note_color_border">#000000</item>
        <item name="background_item_color">#FFFFFF</item>

    </style>
    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">end|center_vertical</item>
    </style>
</resources>