<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_search">

    <fragment
        android:id="@+id/resetPasswordFragment"
        android:name="com.diplom.tabletkaapp.views.authentication.login.ResetPasswordFragment"
        android:label="ResetPasswordFragment"
        tools:layout="@layout/fragment_reset_password" />
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.diplom.tabletkaapp.views.authentication.login.RegisterFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/fragment_register" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.diplom.tabletkaapp.views.authentication.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/show_content_fragment"
            app:destination="@id/contentFragment" />
        <action
            android:id="@+id/showRegisterFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/showResetPasswordFragment"
            app:destination="@id/resetPasswordFragment" />
    </fragment>
    <action
        android:id="@+id/showResetPasswordFragment"
        app:destination="@id/resetPasswordFragment" />
    <action
        android:id="@+id/show_content_fragment"
        app:destination="@id/contentFragment" />
    <action
        android:id="@+id/showRegisterFragment"
        app:destination="@id/registerFragment" />
    <fragment
        android:id="@+id/navigation_search"
        android:name="com.diplom.tabletkaapp.views.search.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.diplom.tabletkaapp.views.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/showLoginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.diplom.tabletkaapp.views.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
</navigation>