<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.diplom.tabletkaapp.ui.authentication.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/show_content_fragment"
            app:destination="@id/contentFragment" />
        <action
            android:id="@+id/showRegisterFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/contentFragment"
        android:name="com.diplom.tabletkaapp.ContentFragment"
        android:label="ContentFragment"
        tools:layout="@layout/fragment_content"/>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.diplom.tabletkaapp.ui.authentication.login.RegisterFragment"
        tools:layout="@layout/fragment_register"
        android:label="RegisterFragment" />
</navigation>